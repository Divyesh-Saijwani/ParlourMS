@model ParlourMS.Data.Models.User
@{
    ViewData["Title"] = "Add User";
}

<form method="post" action="Create" >
    <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-right">Create User</h4>
        </div>
        <div class="row mt-3">
            <div class="col-md-6"><label class="labels">First Name</label><input asp-for="FirstName" class="form-control" placeholder="first name" required></div>
            <div class="col-md-6"><label class="labels">@Html.ValidationMessageFor( x => x.FirstName )</label></div>

            <div class="col-md-6"><label class="labels">Last Name</label><input asp-for="LastName" class="form-control" placeholder="last name"></div>
            <div class="col-md-6"><label class="labels">@Html.ValidationMessageFor( x => x.LastName )</label></div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="col-md-6"><label class="labels">Date of Birth</label><input asp-for="DateOfBirth" type="text" class="form-control"></div>
                <div class="col-md-6"><label class="labels">@Html.ValidationMessageFor(x=>x.DateOfBirth)</label></div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="col-md-6">
                    <label class="labels">PhoneNumber</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="enter phone number" value="" required>
                </div>
                <div class="col-md-6">
                    <label class="labels">@Html.ValidationMessageFor(x=>x.PhoneNumber)</label>
                </div>

            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <label class="labels">Email ID</label>
                    <input asp-for="Email" class="form-control" placeholder="enter email id" value="" required>
                </div>
                <div class="col-md-6">
                    <label class="labels">@Html.ValidationMessageFor( x => x.Email )</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <label class="labels">User Name</label>
                    <input asp-for="UserName" class="form-control" placeholder="enter user name" value="" required>
                </div>
                <div class="col-md-6">
                    <label class="labels">@Html.ValidationMessageFor( x => x.UserName )</label>
                </div>
            </div>
        </div>
        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save</button></div>
    </div>
</form>
